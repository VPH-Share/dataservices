<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<!-- asio tomcat log4j configuration -->
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <!-- internal log without request informations -->
  <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
    <param name="Threshold" value="info" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601} %-5p [%t] %c{1}: %m%n"/>
    </layout>
  </appender>
  
  <!-- includes asio MDC informations -->
  <appender name="asio-log" class="org.apache.log4j.RollingFileAppender">
    <param name="File" value="${catalina.home}/logs/asio.log" />
    <param name="Append" value="true" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601} %-5p [%t] %c{1}: %m | [%X{asio.request.method}|%X{asio.request.uri}] %X{asio.request.operation}%n" />
    </layout>
  </appender>

  <logger name="at.ac.univie.isc.asio">
    <level value="debug" />
    <appender-ref ref="asio-log" />
  </logger>
  
  <!-- by default, log everything to the console with a level of WARN or higher -->
  <root>
    <level value="warn"/>
    <appender-ref ref="stdout"/>
  </root>
  
</log4j:configuration>

