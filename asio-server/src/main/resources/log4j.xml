<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<!-- ogsadai log4j configuration -->
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
    <param name="Threshold" value="FATAL" /> <!-- disable logging for tests -->
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{HH:mm:ss} [%t] %5p %c{1}: %m%n"/>
    </layout>
  </appender>

  <logger name="at.ac.univie.isc">
    <level value="info" /> 
  </logger>
  
  <logger name="uk.org.ogsadai">
    <level value="info" /> 
  </logger>
  
  <!-- disable base sql logging -->
  <logger name="jdbc">
    <level value="fatal" />
  </logger>
  
  <!-- log SQL (pre-execution) plus exceptions caused by SQL -->
  <logger name="jdbc.sqlonly">
    <level value="info"/>
  </logger>

  <!-- log connection open/close events and dump of all open connection numbers -->
  <logger name="jdbc.connection">
    <level value="info"/>
  </logger>
  
  <!-- debug logging for log4jdbc itself -->
  <logger name="log4jdbc.debug">
    <level value="fatal"/>
  </logger>
  
  <!-- by default, log everything to the console with a level of WARN or higher -->
  <root>
    <level value="warn"/>
    <appender-ref ref="stdout"/>
  </root>
  
</log4j:configuration>

