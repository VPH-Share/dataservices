<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{HH:mm:ss} [%t] %5p %c{1}: %m%n"/>
    </layout>
  </appender>

  <!-- enable HTTP response dump on failed test cases -->
  <logger name="at.ac.univie.isc.asio.tool.ResponseMonitor">
    <level value="error" />
  </logger>

  <logger name="at.ac.univie.isc.asio.protocol.Endpoint">
    <level value="error" />
  </logger>

  <!-- application logger -->
  <logger name="at.ac.univie.isc.asio">
    <level value="off" />
  </logger>

  <logger name="de.fuberlin.wiwiss.d2rq">
    <level value="error"/>
  </logger>

  <logger name="uk.org.ogsadai">
    <level value="off"/>
  </logger>

  <!-- jaxrs framework -->
  <logger name="org.apache.cxf">
    <level value="off" />
  </logger>

  <!-- disable logging for quiet testing -->
  <root>
    <level value="off"/>
    <appender-ref ref="stdout"/>
  </root>

</log4j:configuration>

